<div class= "page-header"> 
 <h1 class ="text-center test"> Todos </h1>
 </div>

<div class="container mb-4">
    <%= link_to 'Create new Todo', new_todo_path, {class: "btn btn-outline-primary", role: "button"} %>
</div>
 
 <div class ="container">
    <div class="card-deck">
        <%@todos.each do |todo| %>
    <div class="card mb-4">
        <div class="card-body">
        <h5 class="card-title"><%= todo.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Created <%=distance_of_time_in_words(todo.created_at, Time.now)%> ago</h6>
        <p class="card-text"><%=todo.description%></p>
        <%= link_to 'Edit', edit_todo_path(todo.id), class: "btn btn-warning" %>
        <%= link_to 'Delete', todo_path(todo.id), class: "btn btn-danger float-right ", role: "button", method: "delete", data: { confirm: "Are you sure?" } %>
        </div>
    </div>
    <%end%>
    </div>
</div>

 